# Starlink WiFi Backend Environment Variables

# Server Configuration
NODE_ENV=production
PORT=3000

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-service-role-key-here

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-business-email@gmail.com
EMAIL_PASS=your-app-password-here

# Email Addresses
SENDER_EMAIL=notifications@starlinkwifi.com
ADMIN_EMAIL=admin@starlinkwifi.com

# Frontend URL (for admin panel links)
FRONTEND_URL=https://your-domain.com
BACKEND_API_URL=https://starlink-wifi-backend.onrender.com

# Application Settings
APP_NAME=Starlink Token WiFi
APP_ENV=production
DEBUG=false